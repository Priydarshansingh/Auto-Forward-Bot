# Get these from https://my.telegram.org
API_ID=your_api_id
API_HASH=your_api_hash

# Your phone number with country code (e.g., +1234567890)
PHONE_NUMBER=+1234567890

# Optional: Get from @BotFather if you want bot features too
BOT_TOKEN=your_bot_token

# MongoDB Database URL (you can use MongoDB Atlas free tier)
DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/
DATABASE_NAME=forward-bot

# Your Telegram User ID (get from @userinfobot)
BOT_OWNER_ID=your_user_id

# Session storage path
SESSION_PATH=./sessions/